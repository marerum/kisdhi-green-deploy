# Backend Environment Variables
# Copy this file to .env and fill in the values
# SECURITY WARNING: Never commit .env files to version control!

# Database Configuration (REQUIRED)
# Individual database connection components
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=ai_business_flow
DATABASE_USER=username
DATABASE_PASSWORD=password

# Optional: Direct DATABASE_URL override (if provided, individual components above are ignored)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ai_business_flow

# SSL Configuration for Azure Database for MySQL
# Set to true for Azure Database for MySQL
DATABASE_SSL_REQUIRED=false
# Path to SSL certificate (relative to backend directory)
DATABASE_SSL_CA=certs/DigiCertGlobalRootG2.crt.pem

# OpenAI Configuration (REQUIRED)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
# Generate a secure random string for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000

# SECURITY NOTES:
# - Never expose DATABASE_URL, OPENAI_API_KEY, or SECRET_KEY to the frontend
# - Use HTTPS URLs in production
# - Generate strong, unique SECRET_KEY for production deployments
# - Restrict ALLOWED_ORIGINS to your actual frontend domains in production